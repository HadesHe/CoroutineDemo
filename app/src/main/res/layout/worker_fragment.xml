<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".worker.WorkerFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOneTimeWorker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        android:text="OneTimeWorker" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOneTimeConstraintWorker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnOneTimeWorker"
        android:text="OneTimeConstraintWorker" />

</androidx.constraintlayout.widget.ConstraintLayout>